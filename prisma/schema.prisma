generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id    String @id @default(cuid())
  email String @unique
  nome  String
  senha String
}

model Colaborador {
  id         Int                 @id @default(autoincrement())
  tipo       Int                 @default(0)
  flag       Int                 @default(0)
  supervisor Int                 @default(0)
  nome       String              @default("")
  empresa    String              @default("")
  funcao     String              @default("")
  setor      String              @default("")
  matricula  String              @default("")
  situacao   String              @default("")
  data       String              @default("")
  observacao String              @default("")
  premio     String              @default("")
  telefone   String              @default("") 
  confirmedIn DateTime?
  createdAt  DateTime            @default(now())
  updatedAt  DateTime            @default(now())
  published  Boolean             @default(false)
  premios    ColaboradorPremio[]
}

model Empresa {
  id         Int      @id @default(autoincrement())
  nome       String   @default("")
  empresa    String   @default("")
  observacao String   @default("")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
  published  Boolean  @default(true)
}

model Premio {
  id                Int                 @id @default(autoincrement())
  nome              String              @default("")
  empresa           String              @default("")
  observacao        String              @default("")
  imagem            String              @default("")
  tipo              Int                 @default(0)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @default(now())
  published         Boolean             @default(true)
  ColaboradorPremio ColaboradorPremio[]
}

model ColaboradorPremio {
  id            Int         @id @default(autoincrement())
  colaboradorId Int
  premioId      Int
  nome          String      @default("")
  observacao    String      @default("")
  tipo          Int         @default(0)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @default(now())
  published     Boolean     @default(true)
  premio        Premio      @relation(fields: [premioId], references: [id])
  colaborador   Colaborador @relation(fields: [colaboradorId], references: [id])
}
